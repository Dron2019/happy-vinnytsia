.form-wrapper(data-form-wrapper)
  .form-close(data-close-form)
    <svg width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M25 25L1 1M1 25L25 1L1 25Z" stroke-width="2"/>
    </svg>
  form(data-form autocomplete="off").form
    .form-title.text-style-h-3.text-black Замовити дзвінок
    .form-description.text-style-body Залишіть контактні дані і ми обов'язково зв'яжемося з вами
    .form-field.form-field-input(data-field-input data-field-name data-status="field--inactive").first-offset
      .input-title.text-style-h-4.text-gray Adınız Soyadınız:
      input(type='text' name="name" placeholder="Metin adınız ve soyadınız").form-field__input
      .input-message(data-input-message)
    .form-field.disabled.form-field-input(data-field-input data-field-phone data-status="field--inactive")
      .input-title.text-style-h-4.text-gray Telefon Numaranız: 
      input(type='text' name="phone" placeholder="Telefon Numaranız").form-field__input
      .input-message(data-input-message)
    .form-field.disabled.form-field-input(data-field-input data-field-email data-status="field--inactive")
      .input-title.text-style-h-4.text-gray E-Posta Adresiniz:
      input(type='text' name="email" placeholder="E-posta adresinizi girin").form-field__input
      .input-message(data-input-message)
    .form-field.disabled.form-field-input(data-field-input data-field-comment data-status="field--inactive")
      .input-title.text-style-h-4.text-gray Mesajınız:
      textarea(type='text' name="comment" placeholder="Metni mesajınız").form-field__input.text-input
      .input-message(data-input-message)
    button( type="submit" data-btn-submit).button-30.button-30--blue
        span(data-btn-submit-text) Надіслати повідомлення
